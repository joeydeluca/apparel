<resources>

    <!-- Base application theme. -->
    <style name="JoeyStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>


    <style name="JoeyStyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="card_thumbnail_outer_layout">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="card_thumbnail_image">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>
